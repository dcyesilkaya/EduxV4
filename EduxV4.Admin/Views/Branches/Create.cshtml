@model EduxV4.Data.Branch

@{
    ViewData["Title"] = "Yeni Şube";
}

<div class="row">
    <style>
        .tab-content {
            border-right: 1px solid #ddd;
            border-bottom: 1px solid #ddd;
            border-left: 1px solid #ddd;
            padding: 10px;
            border-radius: 0px 0px 4px 4px;
            margin-bottom: 10px;
        }

        .nav-tabs {
            margin-bottom: 0px;
        }
    </style>
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#tab_6_1" data-toggle="tab"> Genel </a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tab_6_1">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClassLevelId" class="control-label"></label>
                        <select asp-for="ClassLevelId" class="form-control" asp-items="ViewBag.ClassLevelId">
                            <option value="">Sınıf Seviyesi Seçiniz</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="RoomId" class="control-label"></label>
                        <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId">
                            <option value="">Oda seçiniz</option>
                        </select>
                    </div>
                    <input asp-for="CreateDate" class="form-control" type="hidden" />

                    <input asp-for="CreatedBy" class="form-control" type="hidden" />

                    <input asp-for="UpdateDate" class="form-control" type="hidden" />

                    <input asp-for="UpdatedBy" class="form-control" type="hidden" />


                    <input asp-for="IPAddress" class="form-control" type="hidden" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success" />  <a asp-action="Index" class="btn btn-danger">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
