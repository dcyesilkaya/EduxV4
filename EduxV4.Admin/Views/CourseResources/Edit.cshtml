@model EduxV4.Data.CourseResource

@{
    ViewData["Title"] = "Ders Kaynağı Düzenle";
}


<hr />
<div class="row">
    <div class="col-md-12">
        <style>
            .tab-content {
                border-right: 1px solid #ddd;
                border-bottom: 1px solid #ddd;
                border-left: 1px solid #ddd;
                padding: 10px;
                border-radius: 0px 0px 4px 4px;
                margin-bottom: 10px;
            }

            .nav-tabs {
                margin-bottom: 0px;
            }
        </style>
        @if (ViewBag.Saved == true)
        {
            <div class="alert alert-success">
                Kaydetme işlemi başarıyla gerçekleşti.<a asp-action="Index">Listeye Geri Dön</a>


            </div>

        }
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#tab_6_1" data-toggle="tab"> Genel </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab_6_1">
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="6"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SeasonId" class="control-label"></label>
                            <select asp-for="SeasonId" class="form-control" asp-items="ViewBag.SeasonId"><option value="">Sezon Seçiniz</option></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="CourseResourceType" class="control-label"></label>
                            <select asp-for="CourseResourceType" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(CourseResourceType))">
                                <option value="">Ders kaynak türü seçiniz</option>
                            </select>
                            <span asp-validation-for="CourseResourceType" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CourseId" class="control-label"></label>
                            <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId"><option value="">Ders Seçiniz</option></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="BranchId" class="control-label"></label>
                            <select asp-for="BranchId" class="form-control" asp-items="ViewBag.BranchId"><option value="">Şube Seçiniz</option></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Status" class="control-label"></label>
                            <select asp-for="Status" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(Status))"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <input asp-for="CreateDate" type="hidden" />


                        <input asp-for="CreatedBy" type="hidden" />


                        <input asp-for="UpdateDate" type="hidden" />

                        <input asp-for="UpdatedBy" type="hidden" />



                        <input asp-for="IPAddress" type="hidden" />
                        </div>
                    </div>

                        <div class="form-group">
                            <input type="submit" value="Kaydet" class="btn btn-success" />
                            <a asp-action="Index" class="btn btn-danger">İptal</a>
                        </div>
            </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
